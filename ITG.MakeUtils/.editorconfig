; Check http://editorconfig.org/ for more informations
; Top-most EditorConfig file
root = false

[{Makefile,*.mk}]
indent_style = tab
tab_width = 2
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.sh,shflags}]
indent_style = tab
tab_width = 4
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.ps1,*.psd1,*.psm1}]
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
end_of_line = lf

[{LICENSE,NOTICE}]
indent_style = space
indent_size = 2
end_of_line = lf
